{
    "name": "mono",
    "version": "1.0.0",
    "description": "mono",
    "private": true,
    "workspaces": [
        "js/packages/*",
        "js/apps/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev --no-cache --parallel --continue",
        "lint": "turbo run lint",
        "test": "turbo run test",
        "clean": "turbo run clean && rm -rf node_modules"
    },
    "devDependencies": {
        "@babel/core": "7.16",
        "@babel/preset-env": "7.16",
        "@testing-library/dom": ">=8.11",
        "@testing-library/jest-dom": ">=5.15",
        "@testing-library/user-event": ">=13.5",
        "babel-jest": "27.3",
        "jest": ">=28.1.0",
        "jest-environment-jsdom": ">=28.1.0",
        "jsdom": ">=19.0",
        "turbo": "^1.2.9"
    }
}
