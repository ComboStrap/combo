{
    "name": "combo",
    "version": "1.0.0",
    "description": "combo",
    "types": "./resources/library/combo/dist/types.d.ts",
    "private": true,
    "scripts": {
        "watch": "parcel watch",
        "build": "parcel build --target combo",
        "test": "jest"
    },
    "devDependencies": {
        "@babel/core": "7.16",
        "@babel/preset-env": "7.16",
        "@popperjs/core": "2.10",
        "@testing-library/dom": "8.11",
        "@testing-library/jest-dom": "5.15",
        "@testing-library/user-event": "13.5",
        "@types/bootstrap": "5.1",
        "babel-jest": "27.3",
        "bootstrap": "5.1",
        "jest": "27.3",
        "jsdom": ">=16.7",
        "parcel": "2.0"
    },
    "alias": {
        "bootstrap": {
            "global": "bootstrap"
        }
    },
    "jest": {
        "testEnvironment": "jsdom",
        "testEnvironmentOptions": {
            "userAgent": "Agent/007"
        },
        "testMatch": [
            "**/resources/library/combo/__tests__/**/*.[jt]s?(x)",
            "**/_test/js/*.test.[jt]s?(x)"
        ],
        "setupFilesAfterEnv": [
            "./resources/library/combo/jest/JestExtend.js"
        ]
    },
    "browserslist": [
        "> 0.5%, last 2 versions, not dead"
    ],
    "combo": "./resources/library/combo/dist/combo.min.js",
    "targets": {
        "combo": {
            "source": "./resources/library/combo/combo.js",
            "context": "browser",
            "outputFormat": "global",
            "includeNodeModules": true,
            "isLibrary": false
        }
    },
    "dependencies": {
        "nanoid": "3.1"
    },
    "peerDependencies": {
        "@popperjs/core": "2.10",
        "bootstrap": "5.1"
    }
}
