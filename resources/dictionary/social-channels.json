{
    "facebook": {
        "endpoint": "https://facebook.com/sharer/sharer.php?u=$url",
        "title": "Share this page with Facebook",
        "colors": {
            "text": "#fff",
            "background": "#3b5998",
            "hover-background": "#2d4373"
        },
        "icons": {
            "outline": "uit:facebook-f",
            "outline-circle": "et:facebook",
            "solid": "eva:facebook-fill",
            "solid-circle": "bi:facebook"
        }
    },
    "twitter": {
        "endpoint": "https://twitter.com/intent/tweet/?url=$url&text=$title%0A$description%0A&via=$via",
        "title": "Share this page with Twitter",
        "colors": {
            "text": "#fff",
            "background": "#55acee",
            "hover-background": "#2795e9"
        },
        "icons": {
            "outline": "uit:twitter-alt",
            "outline-circle": "et:twitter",
            "solid": "mdi:twitter",
            "solid-circle": "ant-design:twitter-circle-filled"
        }
    },
    "tumblr": {
        "endpoint": "https://www.tumblr.com/widgets/share/tool?posttype=link&title=$title&caption=$description&canonicalUrl=$url&content=$url",
        "title": "Share this page with Tumblr",
        "colors": {
            "text": "#fff",
            "background": "#35465C",
            "hover-background": "#222d3c"
        },
        "icons": {
            "solid": "carbon:logo-tumblr",
            "solid-circle": "entypo-social:tumblr-with-circle",
            "outline": "uit:tumblr-alt",
            "outline-circle": "et:tumblr"
        }
    },
    "pinterest": {
        "endpoint": "https://pinterest.com/pin/create/button/?url=$url&media=$url&description=$description",
        "icons": {
            "solid": "entypo-social:pinterest",
            "solid-circle": "bi:pinterest",
            "outline": "simple-line-icons:social-pinterest",
            "outline-circle": "icomoon-free:pinterest2"
        }
    },
    "linkedin": {
        "endpoint": " https://www.linkedin.com/shareArticle?mini=true&url=$url&source=$url&title=$title&summary=$description",
        "icons": {
            "solid": "entypo-social:linkedin",
            "solid-circle": "entypo-social:linkedin-with-circle",
            "outline": "uit:linkedin-alt",
            "outline-circle": "et:linkedin"
        }
    },
    "reddit": {
        "endpoint": "https://reddit.com/submit/?resubmit=true&url=$url&title=$description",
        "icons": {
            "solid": "dashicons:reddit",
            "solid-circle": "bi:reddit",
            "outline": "simple-line-icons:social-reddit",
            "outline-circle": "simple-line-icons:social-reddit"
        }
    },
    "email": {
        "endpoint": "mailto:?subject=$title&body=$description%20$url"
    },
    "xing": {
        "endpoint": "https://www.xing.com/spi/shares/new?url=$url",
        "doc": "https://dev.xing.com/plugins/share_button/docs#custom-design"
    },
    "whatsapp": {
        "endpoint": "whatsapp://send?text=$description%20$url"
    },
    "hackernews": {
        "endpoint": "https://news.ycombinator.com/submitlink?u=$url&t=$description"
    },
    "vk": {
        "endpoint": "http://vk.com/share.php?title=$description&url=$url"
    },
    "telegram": {
        "endpoint": "https://telegram.me/share/url?text=$description&url=$url"
    },
    "pocket": {
        "endpoint":"https://getpocket.com/save",
        "queries": {
            "url": "url"
        }
    }
}
