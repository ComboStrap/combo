<html lang="{{ lang }}">
<head>
    <title>{{ title }}</title>
    {{{ head }}}
    {{#if html-rem-size}}
        <style>html {
            font-size: {{html-rem-size}}px
        }</style>
    {{/if}}
</head>
{{!-- position relative is for the toast and messages that are in a corner --}}
<body class="{{body-doku-classes}} position-relative">
<div id="page-core" class="{{ layout-container-class }}">
    <main id="main-content">
        <h1>{{h1}}</h1>
        {{#if toc-html}}
            <nav id="main-toc" class="{{toc-class}}">
                {{{toc-html}}}
            </nav>
        {{/if}}
        {{{ main-content }}}
    </main>
</div>
</body>
</html>
